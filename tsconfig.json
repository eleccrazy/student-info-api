{
    "compilerOptions": {
      "target": "ES5",
      "lib": ["ESNext"],
      "module": "commonjs", 
      "allowJs": true,
      "sourceMap": true,
      "outDir": "./dist",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "noImplicitAny": true,
      "skipLibCheck": true
    },
    "exclude": ["dist", "spec", "node_modules"]
  }